<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane"
            maxHeight="-Infinity" maxWidth="-Infinity" 
            minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="600.0" prefWidth="900.0" 
            styleClass="container-main"
            stylesheets="@../css/JavaQuiz.css"
            xmlns="http://javafx.com/javafx/24.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="org.openjfx.javaquiz.controller.MenuController">
   
   <children>
      <!-- Botón X para cerrar (esquina superior derecha) -->
      <Button fx:id="closeBtn" 
              text="✕" 
              styleClass="btn-close"
              AnchorPane.topAnchor="8.0" 
              AnchorPane.rightAnchor="8.0"
              mnemonicParsing="false"/>
      
      <!-- Contenedor principal con padding -->
      <VBox spacing="24" AnchorPane.topAnchor="32" AnchorPane.bottomAnchor="32" 
            AnchorPane.leftAnchor="32" AnchorPane.rightAnchor="32">
         
         <!-- Título y contador -->
         <VBox spacing="8">
            <Label text="Selecciona los Temas" styleClass="title-medium">
               <font>
                  <Font name="Segoe UI Semibold" size="28" />
               </font>
            </Label>
            
            <Label fx:id="temasCountLabel" 
                   text="Temas seleccionados: 0" 
                   styleClass="text-body"
                   style="-fx-text-fill: #7C3AED; -fx-font-weight: 600;">
               <font>
                  <Font size="16" />
               </font>
            </Label>
         </VBox>
         
         <!-- Contenedor de las dos listas -->
         <HBox spacing="24" VBox.vgrow="ALWAYS">
            
            <!-- LISTA IZQUIERDA: Temas disponibles -->
            <VBox spacing="12" HBox.hgrow="ALWAYS">
               <Label text="📚 Temas Disponibles" style="-fx-font-weight: 600; -fx-font-size: 14px;">
                  <font>
                     <Font size="14" />
                  </font>
               </Label>
               
               <ListView fx:id="topicsListView" 
                         prefWidth="300.0" 
                         VBox.vgrow="ALWAYS"/>
            </VBox>
            
            <!-- BOTONES CENTRALES -->
            <VBox spacing="16" alignment="CENTER" style="-fx-min-width: 140px;">
               <padding>
                  <Insets top="40"/>
               </padding>
               
               <Button fx:id="agregarTema" 
                       text="Agregar →" 
                       styleClass="btn-primary"
                       prefWidth="130.0"
                       mnemonicParsing="false">
                  <font>
                     <Font size="14" />
                  </font>
               </Button>
               
               <Button fx:id="removerTema" 
                       text="← Quitar" 
                       styleClass="btn-secondary"
                       prefWidth="130.0"
                       mnemonicParsing="false">
                  <font>
                     <Font size="14" />
                  </font>
               </Button>
               
               <Label text="💡 Doble clic para quitar" 
                      style="-fx-font-size: 11px; -fx-text-fill: #94A3B8; -fx-text-alignment: center;"
                      wrapText="true"
                      maxWidth="120">
                  <font>
                     <Font size="11" />
                  </font>
               </Label>
            </VBox>
            
            <!-- LISTA DERECHA: Temas seleccionados -->
            <VBox spacing="12" HBox.hgrow="ALWAYS">
               <Label text="✅ Temas Seleccionados" style="-fx-font-weight: 600; -fx-font-size: 14px;">
                  <font>
                     <Font size="14" />
                  </font>
               </Label>
               
               <ListView fx:id="topicsSelectedListView" 
                         styleClass="list-view-selected"
                         prefWidth="300.0" 
                         VBox.vgrow="ALWAYS"/>
            </VBox>
            
         </HBox>
         
         <!-- Botón de iniciar quiz (abajo) -->
         <HBox alignment="CENTER" spacing="16">
            <padding>
               <Insets top="8"/>
            </padding>
            
            <Button fx:id="iniciarBtn" 
                    text="INICIAR QUIZ" 
                    styleClass="btn-primary"
                    prefWidth="250.0"
                    prefHeight="60.0"
                    mnemonicParsing="false">
               <font>
                  <Font name="Segoe UI Semibold" size="18" />
               </font>
            </Button>
         </HBox>
         
      </VBox>
   </children>
</AnchorPane>