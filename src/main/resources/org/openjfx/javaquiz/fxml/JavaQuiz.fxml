<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="500.0" prefWidth="700.0" 
            styleClass="container-main"
            stylesheets="@../css/JavaQuiz.css"
            xmlns="http://javafx.com/javafx/24.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="org.openjfx.javaquiz.controller.HomeController">
   
   <children>
      <!-- Botón X para cerrar (esquina superior derecha) -->
      <Button fx:id="closeBtn" 
              text="✕" 
              styleClass="btn-close"
              AnchorPane.topAnchor="8.0" 
              AnchorPane.rightAnchor="8.0"
              mnemonicParsing="false"/>
      
      <!-- Contenedor centrado con VBox -->
      <VBox alignment="CENTER" spacing="48" 
            AnchorPane.topAnchor="0.0" 
            AnchorPane.bottomAnchor="0.0" 
            AnchorPane.leftAnchor="0.0" 
            AnchorPane.rightAnchor="0.0">
         
         <padding>
            <Insets top="80" bottom="80" left="40" right="40"/>
         </padding>
         
         <!-- Título principal -->
         <VBox alignment="CENTER" spacing="16">
            <Label text="JavaQuiz" styleClass="title-large">
               <font>
                  <Font name="Segoe UI" size="48" />
               </font>
            </Label>
            
            <Label text="Pon a prueba tus conocimientos de Java" 
                   styleClass="text-body" 
                   style="-fx-text-alignment: center;">
               <font>
                  <Font size="16" />
               </font>
            </Label>
         </VBox>
         
         <!-- Botón PLAY con estilo profesional -->
         <Button fx:id="playquizbtn" 
                 text="COMENZAR QUIZ" 
                 styleClass="btn-primary"
                 prefHeight="70.0" 
                 prefWidth="300.0"
                 mnemonicParsing="false">
            <font>
               <Font name="Segoe UI Semibold" size="20" />
            </font>
         </Button>
         
      </VBox>
   </children>
</AnchorPane>